.people
  display flex
  justify-content space-between
  margin 1rem 0
  flex-wrap wrap
  font-size 1.4rem

.person
  background rgba(64,64,64,0.5)
  color #841e05ff
  border-radius 10px
  padding 1rem
  @media (max-width: 800px)
    width 100%
    margin-bottom 1rem
  p
    margin-bottom 0
    clear left
  h3
    margin 0
    margin-top 0px
    font-size 2rem
    @media (max-width: 800px)
      margin-top 0
    em
      font-size 1rem

.avatar
  border-radius 50%
  width 80px
  float left
  margin-right 20px
  margin-bottom 15px
  border 3px solid white
  box-shadow inset 0 0 10px red
  @media (max-width: 800px)
    width 50px
    border-width 1px
